{
  "uid": "sim-monitor",
  "title": "Simulation Monitor",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "10s",
  "panels": [
    {
      "type": "gauge",
      "title": "Simulation Status (0 OK / 1 ISSUES)",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 0 },
      "targets": [{ "expr": "simulation_status" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Runs per execution",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "targets": [{ "expr": "simulation_runs_last" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal" }
    },
    {
      "type": "stat",
      "title": "Last run age (seconds)",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "targets": [{ "expr": "time() - simulation_last_run_unixtime" }],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 0 } }
    },
    {
      "type": "timeseries",
      "title": "simulation_errors_total",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "targets": [{ "expr": "simulation_errors_total" }],
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "fieldConfig": { "defaults": { "unit": "short" } }
    }
  ]
}
